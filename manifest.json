{
  "manifest_version": 3,
    "name": "语雀小记导出器",
    "version": "1.0",
    "description": "支持将您的语雀小记按标题、日期、标签筛选导出为 Markdown 格式",
    "permissions": [
      "cookies",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.yuque.com/*"
    ],
    "background": {
    "service_worker": "background.js"
    },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
    }
  }